{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "image": {
            "type": "string",
            "defaultValue": "neo4j",
            "allowedValues": [
                "neo4j",
                "ryguyrg/neo4j-panama-papers",
                "ryguyrg/neo4j-paradise-papers",
                "syedhassaanahmed/neo4j-game-of-thrones",
                "syedhassaanahmed/neo4j-inside-airbnb",
                "syedhassaanahmed/neo4j-marvel",
                "syedhassaanahmed/neo4j-medicare",
                "syedhassaanahmed/neo4j-stackexchange"
            ],
            "metadata": {
                "description": "Neo4j based Docker image"
            }
        },
        "containerName": {
            "type": "string",
            "metadata": {
                "description": "Name of the container group and container"
            }
        },
        "neo4jPassword": {
            "type": "securestring",
            "metadata": {
                "description": "Password for 'Neo4j' user"
            }
        },
        "cpu": {
            "type": "int",
            "defaultValue": 4,
            "minValue": 1,
            "maxValue": 4,
            "metadata": {
                "description": "Number of CPU cores"
            }
        },
        "memoryInGb": {
            "type": "int",
            "defaultValue": 14,
            "minValue": 2,
            "maxValue": 14,
            "metadata": {
                "description": "Memory size in GB"
            }
        }
    },
    "variables": {
        "neo4jMemoryInMb": "[mul(sub(parameters('memoryInGb'), 1), 512)]"
    },
    "resources": [{
        "name": "[parameters('containerName')]",
        "type": "Microsoft.ContainerInstance/containerGroups",
        "apiVersion": "2017-10-01-preview",
        "location": "[resourceGroup().location]",
        "properties": {
            "containers": [{
                "name": "[parameters('containerName')]",
                "properties": {
                    "image": "[parameters('image')]",
                    "resources": {
                        "requests": {
                            "cpu": "[parameters('cpu')]",
                            "memoryInGb": "[parameters('memoryInGb')]"
                        }
                    },
                    "environmentVariables": [{
                        "name": "NEO4J_AUTH",
                        "value": "[concat('neo4j/', parameters('neo4jPassword'))]"
                    }, {
                        "name": "NEO4J_dbms_memory_pagecache_size",
                        "value": "[concat(variables('neo4jMemoryInMb'), 'M')]"
                    }, {
                        "name": "NEO4J_dbms_memory_heap_maxSize",
                        "value": "[variables('neo4jMemoryInMb')]"
                    }],
                    "ports": [{
                            "port": 7473
                        },
                        {
                            "port": 7687
                        }
                    ]
                }
            }],
            "osType": "Linux",
            "ipAddress": {
                "type": "Public",
                "ports": [{
                        "protocol": "tcp",
                        "port": "7473"
                    },
                    {
                        "protocol": "tcp",
                        "port": "7687"
                    }
                ]
            }
        }
    }],
    "outputs": {
        "ipAddress": {
            "type": "string",
            "value": "[reference(resourceId('Microsoft.ContainerInstance/containerGroups', parameters('containerName'))).ipAddress.ip]"
        }
    }
}