{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "image": {
            "type": "string",
            "defaultValue": "neo4j",
            "allowedValues": [
                "neo4j", 
                "ryguyrg/neo4j-panama-papers",
                "syedhassaanahmed/neo4j-game-of-thrones"
            ]
        },
        "containerName": {
            "type": "string"
        },
        "neo4jPassword": {
            "type": "securestring"
        },
        "cpu": {
            "type": "int",
            "defaultValue": 2,
            "minValue": 1,
            "maxValue": 2
        },
        "memoryInGb": {
            "type": "int",
            "defaultValue": 7,
            "minValue": 1,
            "maxValue": 7
        }
    },
    "resources": [{
        "name": "[parameters('containerName')]",
        "type": "Microsoft.ContainerInstance/containerGroups",
        "apiVersion": "2017-10-01-preview",
        "location": "[resourceGroup().location]",
        "properties": {
            "containers": [{
                "name": "[parameters('containerName')]",
                "properties": {
                    "image": "[parameters('image')]",
                    "resources": {
                        "requests": {
                            "cpu": "[parameters('cpu')]",
                            "memoryInGb": "[parameters('memoryInGb')]"
                        }
                    },
                    "environmentVariables": [{
                        "name": "NEO4J_AUTH",
                        "value": "[concat('neo4j/', parameters('neo4jPassword'))]"
                    }],
                    "ports": [{
                            "port": 7473
                        },
                        {
                            "port": 7687
                        }
                    ]
                }
            }],
            "osType": "Linux",
            "ipAddress": {
                "type": "Public",
                "ports": [{
                        "protocol": "tcp",
                        "port": "7473"
                    },
                    {
                        "protocol": "tcp",
                        "port": "7687"
                    }
                ]
            }
        }
    }],
    "outputs": {
        "ipAddress": {
            "type": "string",
            "value": "[reference(resourceId('Microsoft.ContainerInstance/containerGroups', parameters('containerName'))).ipAddress.ip]"
        }
    }
}